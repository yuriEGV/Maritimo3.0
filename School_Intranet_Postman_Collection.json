						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Profesor Demo\",\n    \"email\": \"profesor.demo@maritimo.com\",\n    \"password\": \"Password123!\",\n    \"role\": \"teacher\",\n    \"tenantId\": \"{{tenant_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/registro",
							"host": ["{{base_url}}"],
							"path": ["auth", "registro"]
						}
					}
				},
				{
					"name": "POST - Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"profesor.demo@maritimo.com\",\n    \"password\": \"Password123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code >= 200 && pm.response.code < 300) {",
									"  try {",
									"    const data = pm.response.json();",
									"    if (data.token) {",
									"      pm.collectionVariables.set('jwt_token', data.token);",
									"    }",
									"    if (data.user && data.user.tenantId) {",
									"      pm.collectionVariables.set('tenant_id', data.user.tenantId);",
									"    }",
									"  } catch (e) {",
									"    console.warn('No se pudo analizar la respuesta de login:', e);",
									"  }",
									"}",
									"pm.test('Login exitoso', () => pm.response.code === 200);"]
							}
						}
					]
				},
